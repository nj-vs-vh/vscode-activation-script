{
	"name": "activation-script",
	"repository": {
		"url": "https://github.com/nj-vs-vh/vscode-activation-script.git",
		"type": "git"
	},
	"homepage": "https://github.com/nj-vs-vh/vscode-activation-script",
	"author": {
		"name": "Igor Vaiman",
		"url": "https://github.com/nj-vs-vh"
	},
	"publisher": "nj-vs-vh",
	"displayName": "Activation scripts",
	"description": "Activation script runner for VS Code integrated terminal",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:activation-script.addActivationScript",
		"workspaceContains:.vscode/activation.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "activation-script.addActivationScript",
				"title": "Add activation script"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	}
}
